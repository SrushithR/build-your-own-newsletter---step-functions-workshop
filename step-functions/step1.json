{
  "Comment": "Trigger email",
  "StartAt": "Send Email",
  "States": {
    "Send Email": {
      "Type": "Task",
      "Resource": "arn:aws:states:::lambda:invoke",
      "OutputPath": "$.Payload",
      "Parameters": {
        "FunctionName": "arn:aws:lambda:us-east-1:344269040775:function:send_email:$LATEST",
        "Payload": {
          "email_ids": [
            "abc@gmail.com"
          ],
          "subject": "Welcome to the workshop",
          "content": "<p>Hello there!</p>"
        }
      },
      "Retry": [
        {
          "ErrorEquals": [
            "Lambda.ServiceException",
            "Lambda.AWSLambdaException",
            "Lambda.SdkClientException",
            "Lambda.TooManyRequestsException"
          ],
          "IntervalSeconds": 1,
          "MaxAttempts": 3,
          "BackoffRate": 2
        }
      ],
      "End": true
    }
  }
}